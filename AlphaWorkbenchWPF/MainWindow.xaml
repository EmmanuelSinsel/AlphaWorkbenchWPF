                <Rectangle Width="500" Height="2" Fill="Black" Margin="0,0,0,0"></Rectangle>
                <StackPanel Orientation="Horizontal" Height="400">
                    <StackPanel Width="325">
                        <TextBlock Text="Usuario" TextAlignment="Left" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Width="250" Height="35"></TextBlock>
                        <TextBox Name="tbUpdateUser" FontSize="25" Width="250" VerticalAlignment="Center" Height="35"></TextBox>
                        <TextBlock Text="Correo" TextAlignment="Left" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Width="250" Height="35"></TextBlock>
                        <TextBox Name="tbUpdateMail" FontSize="25" Width="250" VerticalAlignment="Center" Height="35"></TextBox>
                        <TextBlock Text="Contraseña" TextAlignment="Left" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Width="250" Height="35"></TextBlock>
                        <PasswordBox Name="tbUpdatePass" FontSize="20" Width="250" VerticalAlignment="Center" Height="35"></PasswordBox>
                        <TextBlock Text="Confirmar Contraseña" TextAlignment="Left" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Width="250" Height="35"></TextBlock>
                        <PasswordBox Name="tbUpdatePassConfirm" FontSize="20" Width="250" VerticalAlignment="Center" Height="35"></PasswordBox>
                    </StackPanel>
                    <Rectangle Width="2" Height="350" Fill="Black" Margin="0,0,0,0" VerticalAlignment="Center"></Rectangle>
                    <StackPanel Width="325">
                        <TextBlock Text="Nombre" TextAlignment="Left" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Width="250" Height="35"></TextBlock>
                        <TextBox Name="tbUpdateName" FontSize="25" Width="250" VerticalAlignment="Center" Height="35"></TextBox>
                        <TextBlock Text="Apellido Paterno" TextAlignment="Left" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Width="250" Height="35"></TextBlock>
                        <TextBox Name="tbUpdateAPP" FontSize="25" Width="250" VerticalAlignment="Center" Height="35"></TextBox>
                        <TextBlock Text="Apellido Materno" TextAlignment="Left" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Width="250" Height="35"></TextBlock>
                        <TextBox Name="tbUpdateAPM" FontSize="25" Width="250" VerticalAlignment="Center" Height="35"></TextBox>
                        <TextBlock Text="Telefono" TextAlignment="Left" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="20" Width="250" Height="35"></TextBlock>
                        <TextBox Name="tbUpdateTel" FontSize="25" Width="250" VerticalAlignment="Center" Height="35"></TextBox>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="btnUpdUser" FontSize="20" Width="200" Height="40" Background="#FFBFBFBF" BorderBrush="{x:Null}" Margin="0,0,0,0" Click="btnUpdUser_Click" >Editar Usuario</Button>
                    <Button Name="btnLogout" FontSize="20" Width="200" Height="40" Background="#FFBFBFBF" BorderBrush="{x:Null}" Margin="20,0,0,0" Click="btnLogout_Click">Cerrar Sesion</Button>
                </StackPanel>

            </StackPanel>
        </Grid>
        <Grid Name = "Config" Background="#FF5D5D5D" Visibility="Hidden" Margin="0,56,0,0">
            <Grid Name="ConfigPanel" Width="300" Background="#FF404040" HorizontalAlignment="Left">
                <StackPanel Orientation="Vertical">
                    <ListBox Background="Transparent" Margin="20,5,0,50" BorderBrush="Transparent" FontFamily="verdana">
                        <ListBoxItem Height="60">
                            <TextBlock Name="configReturn" FontSize="20" TextAlignment="Right" Width="250" MouseDown="configReturn_MouseDown">Volver</TextBlock>
                        </ListBoxItem>
                        <ListBoxItem Height="60">
                            <TextBlock Name="configGeneral" FontSize="20" TextAlignment="Right" Width="250">General</TextBlock>
                        </ListBoxItem>
                        <ListBoxItem Height="60">
                            <TextBlock Name="configProfile" FontSize="20" TextAlignment="Right" Width="250">Mi Perfil</TextBlock>
                        </ListBoxItem>
                        <ListBoxItem Height="60">
                            <TextBlock Name="configVisual" FontSize="20" TextAlignment="Right" Width="250">Ajustes Visuales</TextBlock>
                        </ListBoxItem>
                        <ListBoxItem Height="60">
                            <TextBlock Name="configAW" FontSize="20" TextAlignment="Right" Width="250">AW+</TextBlock>
                        </ListBoxItem>
                        <ListBoxItem Height="60">
                            <TextBlock Name="closeSession" FontSize="20" TextAlignment="Right" Width="250">Cerrar Sesion</TextBlock>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
